<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<main>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2 class="title">New book</h2>

<!--エラー文-->

<% if @book.errors.any? %>
<div class=error>
<h2 class= "errors"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
<ul class="errors-1"><% @book.errors.full_messages.each do |message| %>

  <li class="errors-2"><%= message %></li>

<% end %>
</ul>
</div>
<% end %>

<!--ここまで-->

<%= form_with model:@book,local:true do |f| %>

<div class="f-text">
<p>Title</p>
<%= f.text_field :title %>
</div>

<div class="f-text">
<p>Body</p>
<%= f.text_area :body %>
</div>

<%= f.submit ' Create Book ' %>

<% end %>
</main>
