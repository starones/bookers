<h1>Editing Book</h1>

<!--エラー文-->
<% if @book.errors.any? %>
<div class=error>
<h2 class= "errors"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
<ul class="errors-1"><% @book.errors.full_messages.each do |message| %>
<li class="errors-2"><%= message %></li>
<% end %>
</ul>
</div>
<% end %>
<!--ここまで-->

<%= form_with model:@book, local: true do |f| %>

<div class="f-text">
<p>Title</p>
<%= f.text_field :title %>
</div>

<div class="f-text">
<p>Body</p>
<%= f.text_area :body %>
</div>

<div class="f-text">
<%= f.submit ' Update Book ' %>
</div>
<% end %>


  <%= link_to 'Show', book_path(@book) %>
  |
  <%= link_to 'Back', books_path %>

